---
import { experience, education, certifications } from '~/data/experience';
---
<section id="experience" class="mx-auto mt-24 max-w-6xl">
  <div class="grid gap-12 lg:grid-cols-[2fr,1.2fr]" data-reveal>
    <div class="section-shell p-8">
      <h2 class="flex items-center gap-3 text-3xl font-semibold text-white md:text-4xl">
        <span class="inline-flex h-9 w-9 items-center justify-center rounded-lg bg-white/10">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="h-5 w-5">
            <rect x="3" y="8" width="18" height="11" rx="2"></rect>
            <path d="M9 8V6a3 3 0 0 1 3-3 3 3 0 0 1 3 3v2"></path>
            <path d="M3 12h18"></path>
          </svg>
        </span>
        Experience
      </h2>
      <div class="mt-8 space-y-10 max-h-[540px] overflow-y-auto pr-2" style="scrollbar-width: thin; scrollbar-color: rgba(255,255,255,0.3) transparent;">
        {experience.map((role) => (
          <article>
            <div class="flex items-start justify-between gap-4">
              <div>
                <h3 class="text-2xl font-semibold text-white">{role.title}</h3>
                <p class="text-sm uppercase tracking-[0.3em] text-white/50">{role.company}</p>
              </div>
              <span class="text-sm text-white/60">{role.period}</span>
            </div>
            <p class="mt-4 text-sm text-white/75">{role.summary}</p>
            <ul class="mt-4 space-y-2 text-sm text-white/70">
              {role.achievements.map((achievement) => (
                <li class="flex gap-2"><span aria-hidden="true">â–¹</span><span>{achievement}</span></li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </div>
    <div class="section-shell p-8">
      <h3 class="flex items-center gap-3 text-2xl font-semibold text-white">
        <span class="inline-flex h-8 w-8 items-center justify-center rounded-lg bg-white/10">
          <iconify-icon icon="mdi:school-outline" width="16" height="16" class="text-white/80"></iconify-icon>
        </span>
        Education & Certifications
      </h3>
      <div class="mt-6 space-y-6">
        {education.map((item) => (
          <div class="flex items-start gap-4">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center overflow-hidden rounded-lg border border-white/10 bg-white/5 p-2">
              {item.provider.includes('Monash') && <img src="/images/logos/monash_university_logo.jpg" alt="Monash University" class="h-full w-full object-contain" loading="lazy" />}
              {item.provider.includes('Swinburne') && <img src="/images/logos/swinburne_logo.jpg" alt="Swinburne University" class="h-full w-full object-contain" loading="lazy" />}
            </div>
            <div>
              <h4 class="text-lg font-semibold text-white">{item.course}</h4>
            <p class="text-xs uppercase tracking-[0.3em] text-white/50">{item.provider}</p>
            <p class="mt-2 text-sm text-white/70">{item.summary}</p>
            <p class="mt-1 text-xs text-white/60">{item.period}</p>
            </div>
          </div>
        ))}
      </div>
      <div class="mt-6">
        <h4 class="text-lg font-semibold text-white">Featured Certifications</h4>
        <ul class="mt-3 space-y-3 text-sm text-white/70">
          <li class="flex items-center gap-3">
            <div class="h-6 w-6 flex-shrink-0 rounded border border-white/10 bg-white/5 p-1 flex items-center justify-center">
              <img src="/images/logos/codecademy_logo.jpg" alt="Codecademy" class="h-full w-full object-contain" loading="lazy" />
            </div>
            <span>Codecademy: Data Engineer Career Path</span>
          </li>
          <li class="flex items-center gap-3">
            <div class="h-6 w-6 flex-shrink-0 rounded border border-white/10 bg-white/5 p-1 flex items-center justify-center">
              <img src="/images/logos/codecademy_logo.jpg" alt="Codecademy" class="h-full w-full object-contain" loading="lazy" />
            </div>
            <span>Codecademy: Machine Learning/AI Engineer Career Path</span>
          </li>
          <li class="flex items-center gap-3">
            <div class="h-6 w-6 flex-shrink-0 rounded border border-white/10 bg-white/5 p-1 flex items-center justify-center">
              <img src="/images/logos/harvard_logo.svg" alt="Harvard University" class="h-full w-full object-contain" loading="lazy" />
            </div>
            <span>Harvard CS50: Introduction to Computer Science</span>
          </li>
          <li class="flex items-center gap-3">
            <div class="h-6 w-6 flex-shrink-0 rounded border border-white/10 bg-white/5 p-1 flex items-center justify-center">
              <img src="/images/logos/ibm_logo.svg" alt="IBM" class="h-full w-full object-contain" loading="lazy" />
            </div>
            <span>IBM: Data Analytics Specialization</span>
          </li>
        </ul>
      </div>

    </div>
  </div>
</section>

