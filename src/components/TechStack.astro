---
import { coreStacks, supportingSkills, languages } from '~/data/skills';
---
<section id="tech" class="mx-auto mt-24 max-w-6xl" data-reveal>
  <div class="section-shell px-8 py-12 md:px-12">
    <header class="mb-8">
      <h2 class="text-3xl font-semibold text-white md:text-4xl">Tech Stack</h2>
      <p class="mt-2 max-w-2xl text-white/70">Core tools I use daily, plus supporting skills and languages.</p>
    </header>
    <div class="grid gap-6 md:grid-cols-2">
      {coreStacks.map((stack) => (
        <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
          <p class="text-sm uppercase tracking-[0.3em] text-white/60">{stack.label}</p>
          <ul class="mt-3 flex flex-wrap gap-2 text-sm text-white/80">
            {stack.tools.map((tool) => (
              <li class="rounded-full border border-white/10 bg-white/5 px-3 py-1">{tool}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    <div class="mt-8 grid gap-6 md:grid-cols-2">
      <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
        <p class="text-sm uppercase tracking-[0.3em] text-white/60">Supporting Skills</p>
        <div class="mt-3 flex flex-wrap gap-2 text-sm text-white/80">
          {supportingSkills.map((s) => (
            <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1">{s}</span>
          ))}
        </div>
      </div>
      <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
        <p class="text-sm uppercase tracking-[0.3em] text-white/60">Languages</p>
        <div class="mt-3 flex flex-wrap gap-2 text-sm text-white/80">
          {languages.map((l) => (
            <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1">{l}</span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>


