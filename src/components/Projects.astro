];

const fetched = await Promise.all(reposToFetch.map(fetchRepo));
const repoData = reposToFetch.map((fullName, idx) => {
  const repo = fetched[idx];
  if (repo && repo.name) return repo;
  const namePart = fullName.split('/')[1] ?? fullName;
