<section id="contact" class="mx-auto mt-24 max-w-6xl" data-reveal>
  <div class="contact-shell relative overflow-hidden rounded-3xl border-2 border-cyan-500/30 bg-gradient-to-br from-cyan-900/20 via-blue-900/20 to-teal-900/20 px-8 py-12 md:px-12">
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="contact-orb contact-orb-1"></div>
      <div class="contact-orb contact-orb-2"></div>
      <div class="contact-orb contact-orb-3"></div>
    </div>
    
    <!-- Floating particles -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
      <div class="particle particle-5"></div>
      <div class="particle particle-6"></div>
    </div>

    <div class="relative z-10">
      <h2 class="flex items-center gap-3 text-3xl font-semibold text-white md:text-4xl">
        <span class="inline-flex h-9 w-9 items-center justify-center rounded-lg bg-gradient-to-br from-cyan-400 to-teal-500 shadow-lg">
          <iconify-icon icon="mdi:rocket-launch" width="18" height="18" class="text-white"></iconify-icon>
        </span>
        Let's Build Something Amazing
      </h2>
      <p class="mt-4 max-w-2xl text-lg text-white/80">Interested in collaboration, or just want to chat? Reach out!</p>
      
      <div class="mt-8 flex flex-wrap items-center gap-4 text-sm">
        <a class="contact-btn contact-btn-primary group" href="mailto:contact@georgenizoridis.com">
          <span class="relative z-10 flex items-center gap-2">
            <iconify-icon icon="mdi:email-fast" width="16" height="16"></iconify-icon>
            Email me
            <span class="transition-transform group-hover:translate-x-1" aria-hidden="true">→</span>
          </span>
        </a>
        
        <a class="contact-btn contact-btn-secondary group" href="https://www.linkedin.com/in/george-nizoridis-23246172/" target="_blank" rel="noopener">
          <span class="relative z-10 flex items-center gap-2">
            <iconify-icon icon="mdi:linkedin" width="16" height="16"></iconify-icon>
            LinkedIn
            <span class="transition-transform group-hover:translate-x-1" aria-hidden="true">↗</span>
          </span>
        </a>
        
        <a class="contact-btn contact-btn-secondary group" href="https://github.com/George-Nizor" target="_blank" rel="noopener">
          <span class="relative z-10 flex items-center gap-2">
            <iconify-icon icon="mdi:github" width="16" height="16"></iconify-icon>
            GitHub
            <span class="transition-transform group-hover:translate-x-1" aria-hidden="true">↗</span>
          </span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-shell {
    animation: contact-pulse 4s ease-in-out infinite;
  }
  
  .contact-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(40px);
    opacity: 0.6;
  }
  
  .contact-orb-1 {
    width: 200px;
    height: 200px;
    background: linear-gradient(45deg, #06b6d4, #8b5cf6);
    top: -50px;
    left: -50px;
    animation: contact-float-1 8s ease-in-out infinite;
  }
  
  .contact-orb-2 {
    width: 150px;
    height: 150px;
    background: linear-gradient(135deg, #0891b2, #0d9488);
    bottom: -40px;
    right: -40px;
    animation: contact-float-2 6s ease-in-out infinite reverse;
  }
  
  .contact-orb-3 {
    width: 120px;
    height: 120px;
    background: linear-gradient(90deg, #10b981, #06b6d4);
    top: 40%;
    right: 10%;
    animation: contact-float-3 10s ease-in-out infinite;
  }
  
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: white;
    border-radius: 50%;
    opacity: 0.7;
  }
  
  .particle-1 { top: 20%; left: 20%; animation: particle-float 3s ease-in-out infinite; }
  .particle-2 { top: 60%; left: 80%; animation: particle-float 4s ease-in-out infinite 0.5s; }
  .particle-3 { top: 80%; left: 30%; animation: particle-float 3.5s ease-in-out infinite 1s; }
  .particle-4 { top: 30%; left: 70%; animation: particle-float 2.8s ease-in-out infinite 1.5s; }
  .particle-5 { top: 50%; left: 10%; animation: particle-float 4.2s ease-in-out infinite 0.8s; }
  .particle-6 { top: 10%; left: 90%; animation: particle-float 3.2s ease-in-out infinite 2s; }
  
  .contact-btn {
    position: relative;
    overflow: hidden;
    border-radius: 9999px;
    padding: 12px 24px;
    font-weight: 600;
    transition: all 0.3s ease;
    transform-style: preserve-3d;
  }
  
  .contact-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }
  
  .contact-btn:hover::before {
    transform: translateX(100%);
  }
  
  .contact-btn-primary {
    background: linear-gradient(135deg, #06b6d4, #8b5cf6);
    border: 1px solid rgba(255,255,255,0.2);
    color: white;
    box-shadow: 0 8px 32px rgba(6, 182, 212, 0.3);
  }
  
  .contact-btn-primary:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 12px 40px rgba(6, 182, 212, 0.4);
  }
  
  .contact-btn-secondary {
    background: rgba(255,255,255,0.1);
    border: 1px solid rgba(255,255,255,0.2);
    color: rgba(255,255,255,0.9);
    backdrop-filter: blur(10px);
  }
  
  .contact-btn-secondary:hover {
    transform: translateY(-2px);
    background: rgba(255,255,255,0.15);
    border-color: rgba(255,255,255,0.3);
    color: white;
  }
  
  @keyframes contact-pulse {
    0%, 100% { border-color: rgba(6, 182, 212, 0.3); }
    50% { border-color: rgba(20, 184, 166, 0.5); }
  }
  
  @keyframes contact-float-1 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -20px) rotate(120deg); }
    66% { transform: translate(-20px, 30px) rotate(240deg); }
  }
  
  @keyframes contact-float-2 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(-40px, -30px) rotate(180deg); }
  }
  
  @keyframes contact-float-3 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(20px, -40px) scale(1.1); }
  }
  
  @keyframes particle-float {
    0%, 100% { transform: translateY(0px) opacity(0.7); }
    50% { transform: translateY(-20px) opacity(1); }
  }
</style>


