---
import BaseLayout from '~/layouts/BaseLayout.astro';

export interface Props {
  title: string;
  description: string;
  publishDate: Date;
  hero?: string;
  tags?: string[];
}

const { title, description, publishDate, hero, tags = [] } = Astro.props as Props;
---
<BaseLayout title={`${title} Â· George Nizoridis`} description={description} page="blog">
  <article class="mx-auto max-w-3xl">
    <header class="mb-12" data-reveal>
      <p class="text-xs uppercase tracking-[0.3em] text-sand/60">
        {publishDate.toLocaleDateString(undefined, { month: 'long', day: 'numeric', year: 'numeric' })}
      </p>
      <h1 class="mt-4 text-4xl font-bold text-white md:text-5xl">{title}</h1>
      <p class="mt-4 text-lg text-sand/70">{description}</p>
      {tags.length > 0 && (
        <div class="mt-5 flex flex-wrap gap-2 text-xs text-sand/60">
          {tags.map((tag) => (
            <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1">{tag}</span>
          ))}
        </div>
      )}
      {hero && (
        <div class="mt-8 overflow-hidden rounded-3xl border border-white/10">
          <img src={hero} alt={title} class="w-full object-cover" loading="lazy" />
        </div>
      )}
    </header>
    <div class="prose prose-invert max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>
